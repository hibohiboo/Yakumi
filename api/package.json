  "devDependencies": {
    "@redocly/cli": "^1.12.2",
    "@types/mssql": "^9.1.5",
    "@types/node": "^20.x",
    "rimraf": "^5.0.7",
    "tsc-alias": "^1.8.10",
    "typescript": "^5.4.5"
  },
  "main": "dist/api/src/functions/*.js"
